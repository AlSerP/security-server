<%= erb :_header %>

<h2>Список пользователей</h2>
<hr>
<table>
  <thead>
    <tr><td>Имя</td> <td>Админ</td> <td>Заблокирован</td> <td>Ограничения на пароль</td> </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <%= user.username %> </td>
        <td> <%= user.admin? ? 'Да' : 'Нет' %> </td>
        <td> <%= user.blocked? ? 'Да' : 'Нет' %> </td>
        <td> <%= user.validating? ? 'Да' : 'Нет' %> </td>
        <td> <form method='post' action='user/block/<%= user.username %>'><button type="submit"><%= user.blocked? ? 'Разблокировать' : 'Заблокировать' %></button></form></td>
        <td> <form method='post' action='user/validate/<%= user.username %>'><button type="submit"><%= !user.validating? ? 'Включить валидацию' : 'Выключить валидацию' %></button></form></td>
      </tr>
    <% end %>
</tbody>
</table>
<a href="/admin/add_user">Создать пользователя</a>